<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title></title>
  <!-- Bootstrap CSS -->
    <!-- https://cdnjs.com/libraries/twitter-bootstrap/5.0.0-beta1 -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta1/css/bootstrap.min.css"
    />

    <!-- Icons: https://getbootstrap.com/docs/5.0/extend/icons/ -->
    <!-- https://cdnjs.com/libraries/font-awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
    />
       <style>
        th {
            background-color: darkgray;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            border-radius: 3px;
            
        }

        h3 {
            text-align: center;
           
        }

        table {
            border-radius: 8px;
            width: 50%;
           margin:auto;
            text-align: center;
        }

       

        #title {
            display:block;
            
        }
        hr{
            color:black;
        }
        tr, td {
            background-color: darkturquoise;
            border: solid 1px;
        }

        body {
            width: 80%;
            height: 60%;
            background-color: rgba(111, 198, 198, 0.42);
            justify-content: center;
        }

        
         
          }
    </style>
</head>
<body>


    <div id="title">

        <h3>Available Books</h3>
        <table border="1">
            <tr><th>Books Available</th></tr>
            <tr><td><%=books.length%></td></tr>
        </table>

    </div>
    <hr/>
    <div id="tbl">
        <table border="1">
            <tr><th>ID</th><th>Author</th><th>Title</th><th>Year</th></tr>
            <% for (var i = 0; i < books.length; i++) { %>
            <tr><td><%=books[i]._id %></td>
                <td><%=books[i].author %></td>
                <td><%=books[i].title %></td>
                <td><%=books[i].year %></td>
                <td><a href="#" class="btn btn-info">Edit</a></td>
                <td>
                    <form action="/deleteBook" method="post">
                        <button type="submit" class="btn btn-danger">Delete</a>
                    </form>
                </td>
                
            </tr>
            <% }%>
        </table>
    </div>
    <hr/>
    <aside>
        <a href="/"> <button id="btnHome" class="btn btn-primary" type="button">Return Home</button></a>
    </aside>
</body>
</html> 